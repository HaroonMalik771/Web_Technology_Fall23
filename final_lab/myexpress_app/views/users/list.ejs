<h1>Users List</h1>
<ul>
    <% users.forEach(function(user) { %>
        <li>
            <strong><%= user.username %></strong> - <%= user.email %>
            <!-- Edit link -->
            <a href="/users/edit/<%= user._id %>">Edit</a>
            <!-- Delete form -->
            <form action="/users/delete/<%= user._id %>" method="post" onsubmit="return confirm('Are you sure you want to delete this user?');">
                <button type="submit">Delete</button>
            </form>
        </li>
    <% }); %>
</ul>
